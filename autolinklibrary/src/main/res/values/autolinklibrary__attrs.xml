<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Creates an enum resource attribute that maps out to the ordinal values of AutoLinkMode.
    -->
    <attr name="autolinklibrary__auto_link_modes" format="enum">
        <enum name="Hashtag" value="0"/>
        <enum name="Mention" value="1"/>
        <enum name="URL" value="2"/>
        <enum name="Phone" value="3"/>
        <enum name="Email" value="4"/>
        <enum name="Custom" value="5"/>
    </attr>
    <attr name="autolinklibrary__custom_regex" format="string|reference"/>
    <attr name="autolinklibrary__auto_link_text" format="string|reference"/>
    <attr name="autolinklibrary__hashtag_mode_color" format="color|reference"/>
    <attr name="autolinklibrary__mention_mode_color" format="color|reference"/>
    <attr name="autolinklibrary__url_mode_color" format="color|reference"/>
    <attr name="autolinklibrary__phone_mode_color" format="color|reference"/>
    <attr name="autolinklibrary__email_mode_color" format="color|reference"/>
    <attr name="autolinklibrary__custom_mode_color" format="color|reference"/>
    <attr name="autolinklibrary__selected_state_color" format="color|reference"/>

    <!--
        Creates the Styleable attribute that will seek out our custom resource attributes from the
        AutoLinkTextView's XML attributes
    -->
    <declare-styleable name="AutoLinkTextView">
        <attr name="autolinklibrary__auto_link_modes"/>
        <attr name="autolinklibrary__auto_link_text"/>
        <attr name="autolinklibrary__hashtag_mode_color"/>
        <attr name="autolinklibrary__mention_mode_color"/>
        <attr name="autolinklibrary__url_mode_color"/>
        <attr name="autolinklibrary__phone_mode_color"/>
        <attr name="autolinklibrary__email_mode_color"/>
        <attr name="autolinklibrary__custom_mode_color"/>
        <attr name="autolinklibrary__selected_state_color"/>
    </declare-styleable>
</resources>